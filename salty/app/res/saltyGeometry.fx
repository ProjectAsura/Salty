//////////////////////////////////////////////////////////////////////////////////////////////
// Ray structure
//////////////////////////////////////////////////////////////////////////////////////////////
struct Ray
{
    float3  Position;       //!< 位置座標です.
    float3  Direction;      //!< 方向ベクトルです.
};

//////////////////////////////////////////////////////////////////////////////////////////////
// Sphere structure
//////////////////////////////////////////////////////////////////////////////////////////////
struct Sphere
{
    float3  Position;       //!< 位置座標です.
    float   Radius;         //!< 半径です.
};

//////////////////////////////////////////////////////////////////////////////////////////////
// Triangle structure
//////////////////////////////////////////////////////////////////////////////////////////////
struct Triangle
{
    float3  Vertex0;        //!< 頂点座標0です.
    float3  Vertex1;        //!< 頂点座標1です.
    float3  Vertex2;        //!< 頂点座標2です.
};